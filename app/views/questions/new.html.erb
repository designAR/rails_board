<h1>New Question</h1>
<%= form_with(model: @question) do |form| %>
    <% if @question.errors.any? %>
    <% end %>
    <div>
        <ul>
            <% @question.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>

    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>        
    </div>
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>        
    </div>
    <div>
        <%= form.label :content %><br>
        <%= form.text_area :content %>        
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>